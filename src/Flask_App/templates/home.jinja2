{% extends 'base.jinja2' %}

{% block content %}
<h1>Spoiler-free Movie Reviews</h1>
{% if posts %}
<h2>Reviews</h2>
{% endif %}

<ul>
    {% for post_id,post in posts.items() %}
       <!-- <li><a href="/post/0">Post 1</a></li> -->
        <li><a href="{{ url_for('post', post_id = post_id) }}">{{ post['title'] }}  </a></li>
    {% endfor %}
</ul>
<a href="{{ url_for('create') }}">Write a Review</a>
{% endblock %}